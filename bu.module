<?php

function bu_init() {
  drupal_add_js(drupal_get_path('module', 'bu') . '/bu.js');
}

function bu_menu() {
  $items = array();
  $items['admin/config/development/bu'] = array(
    'title' => 'Browser update',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('bu_admin_settings'),
    'file' => 'bu.admin.inc',
    'type' => MENU_NORMAL_ITEM,
  );
  return $items;
}

